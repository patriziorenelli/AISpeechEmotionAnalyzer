{
    "General": {
        "AppName": "AI Speech Emotion Analyzer",
        "Version": "1.0.0",
        "DebugMode": true
    },
    "Dataset": {
        "Ravdess": {
            "dataset_name": "PiantoDiGruppo/AMLDataset2",
            "split_names": {
                "train": "train",
                "val": "validation",
                "test": "test"
            }
        },
        "Omgdataset": {
            "dataset_name": "PiantoDiGruppo/OMGEmotion_AML",
            "split_names": {
                "train": "train",
                "val": "validation",
                "test": "test"
            }
        },
        "Goemotions": {
            "dataset_path": "goemotion",
            "dataset_name": "simplified",
            "split_names": {
                "train": "train",
                "val": "validation",
                "test": "test"
            }
        },
        "Meld": {
            "dataset_base_url": "https://raw.githubusercontent.com/declare-lab/MELD/master/data/MELD/",
            "split_names": {
                "train": "train",
                "val": "dev",
                "test": "test"
            }
        }
    },
    "Preprocessing": {
        "Audio":{

        },
        "Text": {
            "Model": {
                "model_id": "openai/whisper-large-v3",
                "target_sr": 16000,
                "language": "en"
            }

        },
        "Video": {

        }
    },
    "Pipelines": {
        "Audio":{
           
        },
        "Text": {
            "n_sample_train": 1000,
            "n_sample_val": 200,
            "n_sample_test": 200,
            "exclude_neutral": true,

            "Models":
            {
                "Emoberta":{
                    "model_name": "tae898/emoberta-base",
                    "tokenizer_name": "tae898/emoberta-base",
                    "tokenizer_max_length": 512,
                    "save_strategy": "no",
                    "fp16": true,
                    "gradient_accumulation_steps": 2,
                    "num_train_epochs": 3,
                    "test_size": 0.1,
                    "per_device_train_batch_size": 16,
                    "per_device_eval_batch_size": 16,
                    "learning_rate": 2e-5,
                    "weight_decay": 0.01,
                    "logging_dir": null,
                    "logging_steps": 50,
                    "dataloader_drop_last": false,
                    "report_to": "none"
                },
                "Xlnet":{
                    "model_name": "sk23aib/Xlnet_emotion_model",
                    "tokenizer_name": "sk23aib/Xlnet_emotion_model",
                    "tokenizer_max_length": 512,
                    "save_strategy": "no",
                    "fp16": true,
                    "gradient_accumulation_steps": 2,
                    "num_train_epochs": 3,
                    "test_size": 0.1,
                    "per_device_train_batch_size": 16,
                    "per_device_eval_batch_size": 16,
                    "learning_rate": 5e-5,
                    "weight_decay": 0.01,
                    "logging_dir": null,
                    "logging_steps": 50,
                    "dataloader_drop_last": false,
                    "report_to": "none"
                },
                "Distilbert":{
                    "model_name": "bhadresh-savani/distilbert-base-uncased-emotion",
                    "tokenizer_name": "bhadresh-savani/distilbert-base-uncased-emotion",
                    "tokenizer_max_length": 512,
                    "save_strategy": "no",
                    "fp16": true,
                    "gradient_accumulation_steps": 2,
                    "num_train_epochs": 3,
                    "test_size": 0.1,
                    "per_device_train_batch_size": 16,
                    "per_device_eval_batch_size": 16,
                    "learning_rate": 5e-5,
                    "weight_decay": 0.01,
                    "logging_dir": null,
                    "logging_steps": 50,
                    "dataloader_drop_last": false,
                    "report_to": "none"
                } 
            },

            "Hp_search": {
                "do_hpo": true,
                "min_learning_rate": 1e-5,
                "max_learning_rate": 5e-5,
                "per_device_train_batch_size": [4, 8, 16],
                "min_num_epochs": 2,
                "max_num_epochs": 5,
                "min_warmup_ratio": 0.0,
                "max_warmup_ratio": 0.2,
                "min_weight_decay": 0.0,
                "max_weight_decay": 0.3,
                "scheduler_type": ["linear", "cosine", "cosine_with_restarts"],
                "num_trials": 5
            }
        },
        "Video": {

        }
    },
    "Metrics": {
        "accuracy":  "accuracy",
        "f1": "f1",
        "precision": "precision",
        "recall": "recall"
    },
    "Paths": {
        "emotion_file": "./Utilities/emotions.txt",
        "ekman_mapping_file": "./Utilities/ekman_mapping.json",
        "models_dir": "./Models",
        "tokenizers_dir": "./Tokenizers",
        "log_dir": "./Logs",
        "base_path": "CompletePipeline"
    },
    "Logger":{
        "level": "info",
        "log_file_name": "./Logs/execution.log",
        "format": "%(asctime)s %(levelname)s %(message)s",
        "date_format": "%Y-%m-%d %H:%M:%S"
    }
}